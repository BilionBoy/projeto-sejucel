<%%= render "shared/context_nav", title: t("activerecord.models.#{<%= class_name %>.model_name.i18n_key}.other"), new_path: new_<%= singular_table_name %>_path do  %>
<span class="breadcrumb-item active"><%%= t("activerecord.models.#{<%= class_name %>.model_name.i18n_key}.other") %></span>
<%% end %>
<div class="modern-card">
  <div class="modern-card-header">
    <%%= search_form_for @q, html: { class: "modern-search-form", autocomplete: "off" } do |f| %>
      <%%= f.search_field :<%= attributes[0].name %>_cont, class: "modern-search-input", placeholder: "Pesquisar..." %>
      <%%= f.button(type: 'submit', class: 'modern-btn modern-btn-primary modern-btn-icon') { tag.i(class: 'ph-magnifying-glass') } %>
      <%% if params[:q] %>
      <%%= link_to tag.i(class: 'ph-x-circle'), <%= plural_table_name %>_path, class: "modern-btn modern-btn-secondary modern-btn-icon" %>
      <%% end %>
      <%% end %>
    </div>
    <div class="modern-card-body">
      <%% if @<%= plural_table_name %>.any? %>
      <div class="modern-table-container">
        <table class="modern-table">
          <thead>
            <tr>
              <th style="width: 80px; text-align: center;">Ações</th>
              <% attributes_to_ignore = ['deleted_at', 'original_user_create', 'last_user_update', 'created_by', 'updated_by'] %>
              <%- attributes.each do |attribute| -%>
                <% unless attributes_to_ignore.include?(attribute.name) %>
                  <th><%%= sort_link(@q, :<%= attribute.name %>, t("activerecord.attributes.<%= singular_table_name %>.<%= attribute.name %>")) %></th>
                <% end %>
              <%- end -%>
            </tr>
          </thead>
          <tbody>
            <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
            <tr>
              <td style="text-align: center;">
                <div class="modern-dropdown">
                  <a href="#" class="modern-dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu modern-dropdown-menu">
                    <div class="modern-dropdown-header">Opções</div>
                    <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "modern-dropdown-item" do %>
                    <i class="ph-pen"></i> Editar
                    <%% end %>
                    <%%= form_for <%= singular_table_name %>, method: :delete do |f| %>
                    <a class="modern-dropdown-item hand-pointer" data-confirm-delete="<%%= <%= singular_table_name %>_path(<%= singular_table_name %>) %>" data-csrf-token="<%%= form_authenticity_token %>">
                      <i class="ph-trash-simple"></i> Excluir
                    </a>
                    <%% end %>
                  </div>
                </div>
              </td>
              <%- attributes.each do |attribute| -%>
                <% unless attributes_to_ignore.include?(attribute.name) %>
                  <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
                <% end %>
              <%- end -%>
            </tr>
            <%% end %>
          </tbody>
        </table>
      </div>
      <%% else %>
      <div class="modern-empty-state">
        <i class="ph-folder-open"></i>
        <h3>Nenhum registro encontrado</h3>
        <p>Comece criando um novo registro</p>
      </div>
      <%% end %>
    </div>
    <%% if @<%= plural_table_name %>.any? %>
    <div class="modern-card-footer">
      <div class="modern-pagination">
        <%%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn"').html_safe %>
      </div>
    </div>
    <%% end %>
  </div>