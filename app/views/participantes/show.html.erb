<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Participante</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @participante %>">
          <p>
            <strong>Nome:</strong>
            <%= @participante.nome %>
          </p>
          <p>
            <strong>Cpf:</strong>
            <%= @participante.cpf %>
          </p>
          <p>
            <strong>Codigo Qr:</strong>
            <%= @participante.codigo_qr %>
          </p>
          <p>
            <strong>Modalidade:</strong>
            <%= @participante.modalidade %>
          </p>
          <p>
            <strong>Municipio:</strong>
            <%= @participante.municipio %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_participante_path(@participante), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", participantes_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @participante, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
