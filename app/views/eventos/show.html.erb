<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Evento</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @evento %>">
          <p>
            <strong>Descricao:</strong>
            <%= @evento.descricao %>
          </p>
          <p>
            <strong>Data Inicio:</strong>
            <%= @evento.data_inicio %>
          </p>
          <p>
            <strong>Data Fim:</strong>
            <%= @evento.data_fim %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_evento_path(@evento), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", eventos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @evento, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
