<%= render "shared/context_nav", title: t("activerecord.models.#{Evento.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{Evento.model_name.i18n_key}.other"), eventos_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@evento) do |f| %>
  <div class="modern-form-card">
    <div class="modern-form-header">
      <h5>
        <%= @evento.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{Evento.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="modern-form-body">
      <% if f.error_notification %>
        <div class="modern-error-notification">
          <strong>Atenção!</strong>
          <%= f.error_notification %>
        </div>
      <% end %>
      <% if f.object.errors[:base].present? %>
        <div class="modern-error-notification">
          <strong>Erro:</strong>
          <%= f.object.errors[:base].to_sentence %>
        </div>
      <% end %>
      <div class="modern-form-row">
        <div class="modern-form-group">
          <%= f.input :descricao, 
                input_html: { class: "modern-form-control capitalize" }, 
                label_html: { class: "modern-form-label" },
                placeholder: "Descricao",
                wrapper_html: { class: "modern-form-group" } %>
        </div>
        <div class="modern-form-group">
          <%= f.input :data_inicio, 
                input_html: { class: "modern-form-control capitalize" }, 
                label_html: { class: "modern-form-label" },
                placeholder: "Data inicio",
                wrapper_html: { class: "modern-form-group" } %>
        </div>
        <div class="modern-form-group">
          <%= f.input :data_fim, 
                input_html: { class: "modern-form-control capitalize" }, 
                label_html: { class: "modern-form-label" },
                placeholder: "Data fim",
                wrapper_html: { class: "modern-form-group" } %>
        </div>
      </div>
    </div>
    <div class="modern-form-footer">
      <%= link_to "Cancelar", eventos_path, class: "modern-btn modern-btn-secondary" %>
      <%= f.button :submit, "Salvar", class: "modern-btn modern-btn-primary" %>
    </div>
  </div>
<% end %>