<%= render "shared/context_nav", title: t("activerecord.models.#{Acao.model_name.i18n_key}.other"), new_path: new_acao_path do  %>
<span class="breadcrumb-item active"><%= t("activerecord.models.#{Acao.model_name.i18n_key}.other") %></span>
<% end %>
<div class="modern-card">
  <div class="modern-card-header">
    <%= search_form_for @q, html: { class: "modern-search-form", autocomplete: "off" } do |f| %>
      <%= f.search_field :participante_nome_cont, class: "modern-search-input", placeholder: "Pesquisar..." %>
      <%= f.button(type: 'submit', class: 'modern-btn modern-btn-primary modern-btn-icon') { tag.i(class: 'ph-magnifying-glass') } %>
      <% if params[:q] %>
      <%= link_to tag.i(class: 'ph-x-circle'), acoes_path, class: "modern-btn modern-btn-secondary modern-btn-icon" %>
      <% end %>
      <% end %>
    </div>
    <div class="modern-card-body">
      <% if @acoes.any? %>
      <div class="modern-table-container">
        <table class="modern-table">
          <thead>
            <tr>
              <th style="width: 80px; text-align: center;">Ações</th>
                  <th><%= sort_link(@q, :participante, t("activerecord.attributes.acao.participante")) %></th>
                  <th><%= sort_link(@q, :tipo, t("activerecord.attributes.acao.tipo")) %></th>
                  <th><%= sort_link(@q, :evento, t("activerecord.attributes.acao.evento")) %></th>
                  <th><%= sort_link(@q, :data, t("activerecord.attributes.acao.data")) %></th>
            </tr>
          </thead>
          <tbody>
            <% @acoes.each do |acao| %>
            <tr>
              <td style="text-align: center;">
                <div class="modern-dropdown">
                  <a href="#" class="modern-dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu modern-dropdown-menu">
                    <div class="modern-dropdown-header">Opções</div>
                    <%= link_to edit_acao_path(acao), class: "modern-dropdown-item" do %>
                    <i class="ph-pen"></i> Editar
                    <% end %>
                    <%= form_for acao, method: :delete do |f| %>
                    <a class="modern-dropdown-item hand-pointer" data-confirm-delete="<%= acao_path(acao) %>" data-csrf-token="<%= form_authenticity_token %>">
                      <i class="ph-trash-simple"></i> Excluir
                    </a>
                    <% end %>
                  </div>
                </div>
              </td>
                  <td><%= acao.participante&.nome %></td>
                  <td><%= acao.tipo&.descricao %></td>
                  <td><%= acao.evento&.descricao %></td>
                  <td><%= acao.data %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% else %>
      <div class="modern-empty-state">
        <i class="ph-folder-open"></i>
        <h3>Nenhum registro encontrado</h3>
        <p>Comece criando um novo registro</p>
      </div>
      <% end %>
    </div>
    <% if @acoes.any? %>
    <div class="modern-card-footer">
      <div class="modern-pagination">
        <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn"').html_safe %>
      </div>
    </div>
    <% end %>
  </div>