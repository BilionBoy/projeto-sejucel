<style>
  /* <CHANGE> Aplicando estilo SAURON: fundo sutil, tipografia leve, hierarquia visual */
  .sidebar-main {
    background: #f8f9fa !important;
    border-right: 1px solid #e1e4e8;
    box-shadow: 2px 0 8px rgba(0, 0, 0, 0.03);
  }

  /* Header do Menu com tipografia mais leve */
  .sidebar-section-body h5 {
    color: #374151;
    font-weight: 600;
    font-size: 0.9375rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    margin: 0;
  }

  /* Botão mobile */
  .sidebar-mobile-main-toggle {
    background: transparent !important;
    transition: all 0.2s ease;
  }

  .sidebar-mobile-main-toggle:hover {
    background: rgba(0, 0, 0, 0.04) !important;
  }

  .sidebar-mobile-main-toggle i {
    color: #6c757d;
  }

  /* Barra de pesquisa sutil e leve */
  .sidebar-section-body .form-control-feedback {
    position: relative;
  }

  .sidebar-section-body .form-control {
    background: #ffffff;
    border: 1px solid #ced4da;
    border-radius: 8px;
    padding: 0.5rem 2.25rem 0.5rem 0.875rem;
    font-size: 0.875rem;
    font-weight: 400;
    color: #212529;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
    transition: all 0.2s ease;
  }

  .sidebar-section-body .form-control:focus {
    background: #ffffff;
    border-color: #2196F3;
    box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.1);
    outline: none;
  }

  .sidebar-section-body .form-control::placeholder {
    color: #6c757d;
    font-weight: 400;
  }
  .sidebar-section-body .form-control-feedback-icon {
    position: absolute;
    color: #6c757d;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
  }

  .sidebar-section-body .form-control-feedback-icon i {
    color: #adb5bd;
    font-size: 1rem;
  }

  /* Seções com headers e separadores sutis */
  .sidebar-section {
    padding: 0.75rem 0.875rem;
  }

  .sidebar-section:first-child {
    padding-top: 1rem;
  }

  /* Section headers estilo SAURON */
  .sidebar-section-header {
    padding: 0.625rem 0.875rem 0.375rem;
    margin-top: 0.5rem;
  }

  .sidebar-section-header h6 {
    color: #868e96;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  /* Links de navegação leves e intuitivos */
  .nav-sidebar .nav-item {
    margin-bottom: 0.125rem;
  }

  .nav-sidebar .nav-link {
    display: flex;
    align-items: center;
    padding: 0.625rem 0.875rem;
    border-radius: 6px;
    color: #212529;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.15s ease;
  }

  
  .nav-sidebar .nav-link:hover {
    background: rgba(30, 136, 229, 0.08);
    color: #1e88e5;
  }

  /* Link ativo estilo SAURON (azul suave) */
   .nav-sidebar .nav-link.active {
    background: #1e88e5;
    color: #ffffff;
    font-weight: 600;
  }



  .nav-sidebar .nav-link.active i {
    color: #ffffff;
  }

  /* Ícones sutis e proporcionais */
    .nav-sidebar .nav-link i {
    font-size: 1.125rem;
    margin-right: 0.75rem;
    color: #000000;
    transition: color 0.15s ease;
    flex-shrink: 0;
  }


  .nav-sidebar .nav-link:hover i {
    color: #2196F3;
  }

  .nav-sidebar .nav-link.active i {
    color: #ffffff;
  }

  /* Separador sutil entre seções */
  .sidebar-section + .sidebar-section-header {
    border-top: 1px solid #e9ecef;
    padding-top: 1rem;
  }

  /* Scrollbar minimalista */
  .sidebar-content::-webkit-scrollbar {
    width: 5px;
  }

  .sidebar-content::-webkit-scrollbar-track {
    background: transparent;
  }

  .sidebar-content::-webkit-scrollbar-thumb {
    background: #dee2e6;
    border-radius: 10px;
  }

  .sidebar-content::-webkit-scrollbar-thumb:hover {
    background: #ced4da;
  }

  /* Responsividade */
  @media (max-width: 1199.98px) {
    .sidebar-main {
      box-shadow: 3px 0 12px rgba(0, 0, 0, 0.06);
    }
  }
</style>


<div class="sidebar sidebar-dark sidebar-main sidebar-expand-xl">
  <div class="sidebar-content">
    <div class="sidebar-section-body mt-3">
      <div class="form-control-feedback form-control-feedback-end">
        <input
          type="search"
          id="sidebar-search-input"
          class="form-control"
          placeholder="Pesquisar"
          onkeyup="filterSidebar()"
        />
        <div class="form-control-feedback-icon">
          <i class="ph-magnifying-glass opacity-50"></i>
        </div>
      </div>
    </div>

   <div class="sidebar-section">
  <ul class="nav nav-sidebar" data-nav-type="accordion" id="sidebar-items">
    <li class="nav-item">
      <a href="<%= root_path %>" class="nav-link" id="home-link" data-no-close>
        <i class="ph-house"></i>
        <span>Home</span>
      </a>
    </li>

    <!-- Seção Eventos -->
    <div class="sidebar-section-header">
      <h6>Eventos</h6>
    </div>

    <li class="nav-item">
      <a href="<%= eventos_path %>" class="nav-link">
        <i class="ph-calendar"></i>
        <span>Lista de Eventos</span>
      </a>
    </li>

    <li class="nav-item">
      <a href="<%= new_evento_path %>" class="nav-link">
        <i class="ph-plus-circle"></i>
        <span>Novo Evento</span>
      </a>
    </li>
  </ul>
</div>

  </div>
</div>

<script>
  function filterSidebar() {
    const input = document.getElementById('sidebar-search-input');
    const filter = input.value.toLowerCase();
    const navItems = document.querySelectorAll('#sidebar-items .nav-item, #sidebar-items .nav-item-header');

    navItems.forEach(item => {
      const text = item.textContent.toLowerCase();
      const isCollapsible = item.querySelector('.nav-group-sub');

      if (text.includes(filter)) {
        item.style.display = '';
        if (isCollapsible) {
          isCollapsible.classList.add('show');
        }
      } else {
        item.style.display = 'none';
      }
    });
  }
</script>