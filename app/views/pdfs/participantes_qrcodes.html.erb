<h1 style="text-align: center; margin-bottom: 20px;">Lote de QRCodes - Participantes</h1>
<div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 25px;">
  <% @participantes.each do |p| %>
    <div style="
      border: 1px solid #999;
      padding: 15px;
      text-align: center;
      page-break-inside: avoid;
      font-size: 13px;
      border-radius: 8px;
    ">
      <div style="margin-bottom: 10px;">
        <%= raw RQRCode::QRCode.new(safe_utf8(p.codigo_qr)).as_svg(
              offset: 0,
              color: '000',
              shape_rendering: 'crispEdges',
              module_size: 5 # <<< maior
            ) %>
      </div>
      <p style="font-weight: bold; margin: 5px 0; font-size: 14px;">
        <%= safe_utf8(p.nome) %>
      </p>
      <p style="margin: 3px 0; font-size: 11px; color: gray;">
        CPF: <%= safe_utf8(p.cpf) %>
      </p>
      <p style="margin: 3px 0; font-size: 11px;">
        <%= safe_utf8(p.municipio&.descricao) %>
      </p>
      <p style="margin: 3px 0; font-size: 11px;">
        <%= safe_utf8(p.modalidade&.descricao) %>
      </p>
    </div>
  <% end %>
</div>
