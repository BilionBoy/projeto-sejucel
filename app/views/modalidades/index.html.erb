<%= render "shared/context_nav", title: t("activerecord.models.#{Modalidade.model_name.i18n_key}.other"), new_path: new_modalidade_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{Modalidade.model_name.i18n_key}.other") %></span>
<% end %>
<div class="modern-card">
  <div class="modern-card-header">
    <%= search_form_for @q, html: { class: "modern-search-form", autocomplete: "off" } do |f| %>
      <%= f.search_field :descricao_cont, class: "modern-search-input", placeholder: "Pesquisar..." %>
      <%= f.button(type: 'submit', class: 'modern-btn modern-btn-primary modern-btn-icon') { tag.i(class: 'ph-magnifying-glass') } %>
      <% if params[:q] %>
        <%= link_to tag.i(class: 'ph-x-circle'), modalidades_path, class: "modern-btn modern-btn-secondary modern-btn-icon" %>
      <% end %>
    <% end %>
  </div>
  <div class="modern-card-body">
    <% if @modalidades.any? %>
      <div class="modern-table-container">
        <table class="modern-table">
          <thead>
            <tr>
              <th style="width: 80px; text-align: center;">Ações</th>
              <th><%= sort_link(@q, :descricao, t("activerecord.attributes.modalidade.descricao")) %></th>
            </tr>
          </thead>
          <tbody>
            <% @modalidades.each do |modalidade| %>
              <tr>
                <td style="text-align: center;">
                  <div class="modern-dropdown">
                    <a href="#" class="modern-dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                      <i class="ph-gear"></i>
                    </a>
                    <div class="dropdown-menu modern-dropdown-menu">
                      <div class="modern-dropdown-header">Opções</div>
                      <%= link_to edit_modalidade_path(modalidade), class: "modern-dropdown-item" do %>
                        <i class="ph-pen"></i> Editar
                      <% end %>
                      <%= form_for modalidade, method: :delete do |f| %>
                        <a class="modern-dropdown-item hand-pointer" data-confirm-delete="<%= modalidade_path(modalidade) %>" data-csrf-token="<%= form_authenticity_token %>">
                          <i class="ph-trash-simple"></i> Excluir
                        </a>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td><%= modalidade.descricao %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="modern-empty-state">
        <i class="ph-folder-open"></i>
        <h3>Nenhum registro encontrado</h3>
        <p>Comece criando um novo registro</p>
      </div>
    <% end %>
  </div>
  <% if @modalidades.any? %>
    <div class="modern-card-footer">
      <div class="modern-pagination">
        <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn"').html_safe %>
      </div>
    </div>
  <% end %>
</div>